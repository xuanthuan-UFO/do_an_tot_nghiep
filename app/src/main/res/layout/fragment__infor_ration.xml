<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment_InforRation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:text="Tên Khẩu Phần Ăn"
            android:textSize="24sp"></TextView>


        <EditText
            android:id="@+id/edt_name_ration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="Nhập tên"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/txt_choose_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_name_ration"
            android:layout_marginTop="10dp"
            android:text="Chọn loại bò của bạn"
            android:textSize="16sp"
            android:visibility="invisible"></TextView>

        <TextView
            android:id="@+id/txtloaibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_choose_type"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Chọn Loại bò của bạn"
            android:textSize="24sp"></TextView>

        <Spinner
            android:id="@+id/choose_typeCow"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt_choose_type"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:spinnerMode="dropdown"></Spinner>

        <TextView
            android:id="@+id/my_kgCow"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtloaibo"
            android:layout_marginTop="30dp"
            android:text="Nhập vào cân nặng hiện tại của Bò"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtloaibo"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:text="Kg"
            android:textColor="#F44336"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/txt_kg_present"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_below="@+id/txtloaibo"
            android:layout_marginTop="35dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/kg"
            android:inputType="number"
            android:text="0"
            android:textColor="#F44336"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/txtWeight"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_kg_present"
            android:layout_marginTop="5dp"
            android:text="Chọn cân nặng mong muốn tăng"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/txtWeightWish"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWeight"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="24sp"></TextView>

        <Spinner
            android:id="@+id/choose_Mywish_kg"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt_kg_present"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:spinnerMode="dropdown"></Spinner>
    </RelativeLayout>

</FrameLayout>